/**
 * @name Midnight Vencord
 * @description A warm, earthy dark theme inspired by Gruvbox color palette
 * @author kmmiio99o.dev
 * @version 1.0.0
 */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

:root {
  /* Background Colors */
  --background-primary: #282828;
  --background-secondary: #3c3836;
  --background-secondary-alt: #32302f;
  --background-tertiary: #1d2021;
  --background-accent: #d3869b;
  --background-floating: #3c3836;
  --background-mobile-primary: #282828;
  --background-mobile-secondary: #3c3836;
  --background-modifier-hover: rgba(92, 80, 74, 0.1);
  --background-modifier-active: rgba(92, 80, 74, 0.2);
  --background-modifier-selected: rgba(92, 80, 74, 0.2);
  --background-modifier-accent: rgba(92, 80, 74, 0.1);
  --background-mentioned: rgba(211, 134, 155, 0.2);
  --background-mentioned-hover: rgba(211, 134, 155, 0.3);
  --background-message-hover: rgba(0, 0, 0, 0.1);
  
  /* Text Colors */
  --text-normal: #d4be98;
  --text-muted: rgba(212, 190, 152, 0.4);
  --text-link: #d3869b;
  --text-positive: #a8b665;
  --text-warning: #d8a656;
  --text-danger: #ea6962;
  --header-primary: #d4be98;
  --header-secondary: #a79a83;
  --interactive-normal: #a79a83;
  --interactive-hover: #d4be98;
  --interactive-active: #d4be98;
  --interactive-muted: rgba(212, 190, 152, 0.4);
  
  /* Channel Colors */
  --channels-default: #a79a83;
  --channel-icon: #a79a83;
  --channel-text-area-placeholder: #a79a83;
  
  /* Scrollbar */
  --scrollbar-thin-thumb: #504945;
  --scrollbar-thin-track: transparent;
  --scrollbar-auto-thumb: #504945;
  --scrollbar-auto-track: transparent;
  
  /* Accent Colors */
  --brand-experiment: #d3869b;
  --brand-experiment-hover: #e692a8;
  --brand-experiment-560: #d3869b;
  
  /* Status Colors */
  --info-positive-background: #a8b665;
  --info-positive-foreground: #282828;
  --info-warning-background: #d8a656;
  --info-warning-foreground: #282828;
  --info-danger-background: #ea6962;
  --info-danger-foreground: #282828;
  --status-positive: #a8b665;
  --status-warning: #d8a656;
  --status-danger: #ea6962;
  
  /* Other Colors */
  --deprecated-card-bg: #3c3836;
  --deprecated-card-editable-bg: #32302f;
  --deprecated-store-bg: #282828;
  --deprecated-quickswitcher-input-background: #3c3836;
  --deprecated-quickswitcher-input-placeholder: #a79a83;
  --deprecated-text-input-bg: #3c3836;
  --deprecated-text-input-border: rgba(92, 80, 74, 0.2);
  --deprecated-text-input-border-hover: #504945;
  --deprecated-text-input-border-disabled: #32302f;
  --deprecated-text-input-prefix: #a79a83;
  
  /* Activity Colors */
  --activity-card-background: #3c3836;
  
  /* Button Colors */
  --button-secondary-background: #3c3836;
  --button-secondary-background-hover: #504945;
  --button-secondary-background-active: #5e505c;
  --button-secondary-background-disabled: #32302f;
  --button-danger-background: #ea6962;
  --button-danger-background-hover: #f28b82;
  --button-danger-background-active: #ea6962;
  
  /* Input Colors */
  --input-background: #3c3836;
  
  /* Elevation & Shadows */
  --elevation-stroke: 0 0 0 1px rgba(92, 80, 74, 0.2);
  --elevation-low: 0 1px 0 rgba(29, 32, 33, 0.2), 0 1.5px 0 rgba(29, 32, 33, 0.05), 0 2px 0 rgba(29, 32, 33, 0.05);
  --elevation-medium: 0 4px 4px rgba(0, 0, 0, 0.16);
  --elevation-high: 0 8px 16px rgba(0, 0, 0, 0.24);
  
  /* Mention Colors */
  --mention-foreground: #d3869b;
  --mention-background: rgba(211, 134, 155, 0.2);
  
  /* Font */
  --font-primary: 'Inter', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  --font-display: 'Inter', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* Custom Scrollbar Styling */
::-webkit-scrollbar {
  width: 16px;
  height: 16px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background-color: #504945;
  border-radius: 8px;
  border: 4px solid #282828;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #665c54;
}

/* Chat Input */
.channelTextArea-1VQBuV {
  background-color: #3c3836;
}

/* Embeds */
.embedFull-1HGV2S {
  background-color: #433c33;
  border-color: #d3869b;
}

/* Spoilers */
.spoilerText-27bIiA {
  background-color: #3c3836;
}

.spoilerText-27bIiA.hidden-3B-Rum {
  background-color: #3c3836;
}

.spoilerText-27bIiA.hidden-3B-Rum:hover {
  background-color: #504945;
}

/* Code Blocks */
code {
  background-color: #32302f;
  border-color: #504945;
}

.hljs {
  background-color: #32302f !important;
}

/* Member List */
.members-3WRCEx {
  background-color: #3c3836;
}

/* Search Results */
.searchResult-O9NDji {
  background-color: #3c3836;
}

.searchResult-O9NDji:hover {
  background-color: #504945;
}

/* User Popout */
.userPopout-2j1gM4 {
  background-color: #3c3836;
}

/* Modal */
.modal-3Hrb0S {
  background-color: #282828;
}

/* Settings */
.contentRegion-3HkfJJ,
.sidebarRegion-1VBisG {
  background-color: #282828;
}

.contentRegionScroller-2_GT_N {
  background-color: #282828;
}

/* Home Icon Color */
.homeIcon-r0w4ny path {
  fill: #d3869b;
}

/* Folder Colors */
.expandedFolderBackground-1kSAf6 {
  background-color: #504945;
}

/* Typing Indicator */
.typing-3eiiL_ {
  background-color: #3c3836;
}

/* Reactions */
.reaction-3vwAF2 {
  background-color: #3c3836;
  border-color: #504945;
}

.reaction-3vwAF2:hover {
  background-color: #504945;
  border-color: #665c54;
}
